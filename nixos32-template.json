{
  "builders": [
    {
      "boot_command": [
        "<enter><wait>",
        "<wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait>",
        "root<wait>",
        "<enter><wait>",
        "stop sshd",
        "<enter><wait>",
        "fdisk /dev/sda<wait>",
        "<enter><wait>",
        "n<wait>",
        "<enter><enter><enter><enter><enter><wait>",
        "a<wait>",
        "<enter><wait>",
        "1<wait>",
        "<enter><wait>",
        "w<wait>",
        "<enter><wait>",
        "mkfs.ext4 -j -L nixos /dev/sda1<wait>",
        "<enter><wait>",
        "mount LABEL=nixos /mnt<wait>",
        "<enter><wait>",
        "nixos-option --install<wait>",
        "<enter><wait>",
        "curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/configuration.nix > /mnt/etc/nixos/configuration.nix &&<wait>",
        "<enter><wait>",
        "nixos-install &&<wait>",
        "<enter><wait>",
        "reboot<wait>",
        "<enter><wait>"
      ],
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux",
      "http_directory": "http",
      "iso_checksum": "d0e0a64fe9a5f3f946e6f9fe0b846e70",
      "iso_checksum_type": "md5",
      "iso_url": "http://nixos.org/releases/nixos/13.10/nixos-13.10.35445.be4e850/nixos-minimal-13.10.35445.be4e850-x86_64-linux.iso",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox",
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo '{{.Path}}'",
      "script": "scripts/postinstall.sh"
    }
  ]
}

