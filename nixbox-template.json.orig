{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "1m",
      "boot_command": [
        "root<enter>",
        "stop sshd<enter>",
        "fdisk /dev/sda<enter>",
        "n",
        "<enter><enter><enter><enter><enter>",
        "a<enter>",
        "w<enter>",
        "<wait>",
        "mkfs.ext4 -j -L nixos /dev/sda1<enter><wait2>",
        "mount LABEL=nixos /mnt<enter><wait>",
        "nixos-generate-config --root /mnt<enter><wait>",
        "curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/configuration.nix | sed -e 's|nixbox|NIXBOX|g' > /mnt/etc/nixos/configuration.nix<enter><wait>",
        "nixos-install<enter><wait5>",
        "vagrant<enter>",
        "vagrant<enter>",
        "reboot<enter>"
      ],
      "guest_additions_mode": "disable",
      "guest_os_type": "GUEST_OS",
      "http_directory": "http",
      "iso_url": "ISO_URL",
      "iso_checksum": "ISO_SHA256",
      "iso_checksum_type": "sha256",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "5m",
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo sh '{{.Path}}'",
      "script": "scripts/postinstall.sh"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "NIXBOX-{{.Provider}}.box"
    }
  ]
}

